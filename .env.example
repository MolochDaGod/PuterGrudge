# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/puter_monitor
DB_POOL_MIN=2
DB_POOL_MAX=10

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=12

# Redis Configuration (Optional - for production session storage)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=puter:session:

# AI Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4-turbo-preview

# Monitoring Configuration
ENABLE_DOCKER_MONITORING=true
ENABLE_NETWORK_MONITORING=true
ENABLE_PROCESS_MONITORING=true
MONITORING_INTERVAL=5000

# Security
CORS_ORIGIN=http://localhost:5000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CSRF=true

# Logging & Error Tracking
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Admin Configuration
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=change-this-password
